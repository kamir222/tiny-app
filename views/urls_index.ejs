<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
  <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
  <style>
        html {
          background: white;
          background: #E8EAF6;
        }
        body {
          font-family: 'Montserrat', sans-serif;
          color: white;
          margin: 20px auto;
          max-width: 680px;
          height: 600px;
          padding: 60px;
          background: #3F51B5;
          box-shadow: 6px 4px 41px 2px rgba(0,0,0,0.75);
          border-radius: 5px;
        }
        button {
          margin: 4px 2px;
          cursor: pointer;
          padding: 5px 20px;
        }
        a {
          color: #FFEA00;
        }
        .header_link {
          text-decoration: none;
        }
  </style>
</head>
<body>
  <%- include('partials/_header') %>
  <% if( user ){ %>
    <h4>Hi <%= user.email %>!</h4>
  <% } else { %>
    <p>Please login!</p>
  <% } %>

  <ul>
    <% for (userID in urls) { %>
      <% for (key in urls[userID] ) { %>
      <form method="POST" action="/urls/<%= key %>/delete">
        <li><%= key %> <%= urls[userID][key] %>
          <% if (user && user.id === userID) { %>
            <a href="/urls/<%= key %>">edit</a>
            <button type="submit">Delete</button>
          <% } %>
        </li>
      </form>
      <% } %>
    <% } %>
  </ul>

  <% if( user ){ %>
    <a href="urls/new">link for shortening a new URL</a>
  <% } else { %>
    <a href="/login">link for shortening a new URL</a>
  <% } %>

</body>
</html>
